dir.create("raw_data")
dir.create("clean_data")
dir.create("scripts")
dir.create("results")
dir.create("plots")


# تحميل بيانات المرضى
data <- read.csv("raw_data/patient_info.csv")

# عرض أول صفوف
head(data)

# فحص أنواع الأعمدة
str(data)
names(data)

# تحويل العمر إلى Numeric
data$age <- as.numeric(data$age)

# تحويل النوع إلى Factor
data$gender <- as.factor(data$gender)

# تحويل حالة التدخين إلى Binary: 1 = Yes, 0 = No
data$smoking_binary <- ifelse(data$smoker == "Yes", 1, 0)
data$smoking_binary <- as.factor(data$smoking_binary)


write.csv(data, "clean_data/patient_info_clean.csv", row.names = FALSE)



